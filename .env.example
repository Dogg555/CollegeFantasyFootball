# Copy this file to .env.local (which is gitignored) and fill in your secrets.

# Postgres
POSTGRES_USER=<postgres_user>
POSTGRES_PASSWORD=<postgres_password>
POSTGRES_DB=cff
DB_URL=postgres://<postgres_user>:<postgres_password>@postgres:5432/cff

# Backend
JWT_SECRET=<jwt_secret>
PORT=8080

# TLS (mount certs dir via CERTS_DIR; set paths below to match container paths)
SSL_CERT_FILE=<path_to_cert_inside_container>
SSL_KEY_FILE=<path_to_key_inside_container>
CERTS_DIR=./certs

# CFBD ingestion
CFBD_API_KEY=<cfbd_api_key>
CFBD_SEASON=2024
CFBD_DELAY_SEC=0.2
